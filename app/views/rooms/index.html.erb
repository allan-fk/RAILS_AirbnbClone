<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Mes annonces", rooms_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "Mes réservations", your_reservations_path, class:"sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Mes voyages", your_trips_path, class:"sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">Mes annonces</div>
        <div class="panel-body">
          <% @rooms.each do |room| %>
          <%# parcour chaque annonces de la variable @rooms définie dans -> 'def index' du controller Rooms%>
            <div class="row">
              <div class="col-md-2">
                <%= image_tag room.photos[0].image.url(:thumb) if room.photos.length > 0 %>
                <%# affiche la premiere photo de l'annonce (room.photos[0] --> photo d'index 0 = 1re photo%>
              </div>
              <div class="col-md-7">
                <h4><%= room.listing_name %></h4>
              </div>
              <div class="col-md-3 right">
                <%= link_to "Mettre  jour", edit_room_path(room), class: "btn btn-primary" %>
              </div>
            </div>
            <hr>
          <% end %>
        </div>
    </div>
  </div>
</div>
